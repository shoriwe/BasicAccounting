<Page x:Class="BasicAccounting.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BasicAccounting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeView">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="100">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,18,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Button Name="HomeViewNewFileButton" Content="New File" MinWidth="150" Background="#8e44ad" BorderThickness="0" Foreground="GhostWhite" FontSize="30" Click="Create_new_file"/>
            <Button Name="HomeViewOpenFileButton" Content="Open File" MinWidth="150" Background="#8e44ad" BorderThickness="0" Foreground="GhostWhite" FontSize="30" Click="Open_existing_file"/>
        </StackPanel>
    </Grid>
</Page>
